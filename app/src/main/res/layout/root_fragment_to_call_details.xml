<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".fragments.list.tocall.RootFragmentToCallDetails">



        <TextView
            android:text="Contact Person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="40dp"
            android:id="@+id/ContactPerson"
            android:layout_alignParentTop="true"
            />




    <TextView
        android:text="Phone Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:id="@+id/textNPhone"
        />

        <TextView
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:id="@+id/textDescription"
            />




        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">

            <Button
                android:text="Edit "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cerclebt"
                android:layout_marginRight="30dp"
                android:id="@+id/buttonUpdatetocall" />

            <Button
                android:text="Delete "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cerclebt"
                android:id="@+id/buttonDeletetocall" />


        </LinearLayout>





    </LinearLayout>
